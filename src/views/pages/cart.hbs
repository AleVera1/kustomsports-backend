<h1>Your cart</h1>
<div style="display:flex; ">
    {{#if hasAny}}
        {{#each userCart}}
            <div style="display:flex; flex-direction:column; align-items:center; margin-left:50px; margin-bottom:10px; border: 3px solid #000000; width: 320px; height:250px">
                <h2>{{this.title}}</h2>
                <img src="{{this.image}}" alt="" width="120">
                <h3>Price: {{this.price}}</h3>
            </div>
        {{/each}}
    {{/if}}
</div>
<form action="/">
    <input type="submit" name="" id="" value="Back to home">
</form>
<form action="/cart/comprar" method="post">
    <input type="submit" name="" id="" value="Place order">
</form>

